doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 몽쉘 
        link(rel="stylesheet", href="http://unpkg.com/mvp.css")
    body
        header 
            h1 몽쉘 
        main
            // 방에 들어갔을 때 숨기기 위해 div에 id 생성
            div#welcome
                form#name
                    input(placeholder="nickname", type="text", required)           
                form#room
                    input(placeholder="room name", type="text", required)
                    button Enter Room
            div#chat
                h3
                ul
                form#msg
                    input(placeholder="message", type="text", required)
                    button Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")